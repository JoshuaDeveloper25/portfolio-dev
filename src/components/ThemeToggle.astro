---
import { themeToggleOptions } from "../data/data";
import Moon from "../icons/Moon.astro";
---

<div class="relative mx-1">
  <input type="checkbox" id="dropdown-toggle" class="hidden peer" />

  <label
    class="flex hover:scale-125 transition cursor-pointer"
    for="dropdown-toggle"
  >
    <Moon />
  </label>

  <div
    id="theme-dropdown"
    class="absolute open min-w-[8rem] scale-80 top-8 right-0 text-sm p-1 rounded-md border border-gray-100 bg-white/90 dark:bg-gray-900/90 dark:border-gray-500/20 shadow-[0_3px_10px_rgb(0,0,0,0.2)] backdrop-blur-md hidden peer-checked:flex flex-col"
  >
    <ul>
      {
        themeToggleOptions.map((themeOption) => (
          <li
            class="px-2 py-1.5 cursor-pointer hover:bg-neutral-400/40 dark:hover:bg-gray-500/50 rounded-sm"
            onclick="document.getElementById('dropdown-toggle').checked = false;"
          >
            {themeOption}
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  #theme-dropdown {
    animation: scale-up-center 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
  }

  @keyframes scale-up-center {
    from {
      transform: scale(0.8);
      opacity: 0;
    }

    to {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
